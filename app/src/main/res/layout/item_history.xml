<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:paddingVertical="16dp"
        android:paddingHorizontal="23dp"
        android:background="@drawable/history_cardshadow">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/logoMaskapai"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:src="@drawable/logo_maskapai"/>
            <TextView
                android:fontFamily="@font/inter_medium"
                android:textSize="14dp"
                android:textColor="#191919"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 Jun 2023"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/logoMaskapai"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTintMode="multiply"
                android:background="@drawable/history_redfilterbackground"
                android:text="Re Found"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:background="@drawable/bottom_border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Pemesanan : "
                android:fontFamily="@font/inter_medium"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N585EAG"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="91.5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:48"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16dp"
                    android:textColor="@color/C2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CKG (Jakarta)"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="10dp"
                    android:textColor="@color/C6"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="15dp"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:src="@drawable/item_flightsymb"/>
            <LinearLayout
                android:layout_width="91.5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:11"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16dp"
                    android:textColor="@color/C2"/>
                <TextView
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUB (Surabaya)"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="10dp"
                    android:textColor="@color/C6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>