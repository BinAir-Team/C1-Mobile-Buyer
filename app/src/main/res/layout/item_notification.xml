<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemnotif"
            type="binar.finalproject.binair.buyer.data.response.DataNotif" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNotif"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp">

        <LinearLayout
            android:id="@+id/lvNotif"
            android:background="#6B7D8C9C"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/side_notification" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sukses Login pada December 19th 2022, 4:14:25 am"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15dp"
                    android:lineHeight="25dp" />

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18 Des 22, 10:11" />

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:visibility="visible"
                        android:id="@+id/belumdibaca"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/circle_round" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="tandai sudah dibaca"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10dp" />
                        "
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        android:id="@+id/sudahdibaca"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/checklist_notif" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/MC_Green"
                            android:text="sudah dibaca"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10dp" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>