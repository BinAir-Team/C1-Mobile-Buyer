<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dataKontakBind"
            type="binar.finalproject.binair.buyer.data.model.DataKontak" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.ReviewBookingFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/toolbar">
                <androidx.cardview.widget.CardView
                    android:id="@+id/containerDetailKontak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbar"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/labelDetailKontak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail Kontak (untuk E-Ticket)"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/labelNama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/nama"
                            android:textColor="@color/content_grey"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvNama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@{dataKontakBind.namaLengkap}"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/labelNoTelp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/nomor_telp"
                            android:textColor="@color/content_grey"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvNoTelp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@{dataKontakBind.nomorTelpon}"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/labelEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textColor="@color/content_grey"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@{dataKontakBind.email}"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/containerDataTraveler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="12dp"
                    android:layout_below="@id/containerDetailKontak">

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    id="@+id/containerBagasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:contentPadding="16dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/labelBagasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_bagasi"
                            android:drawablePadding="8dp"
                            android:text="Bagasi"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/totalBagasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Kg"
                            android:textSize="22sp"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:id="@+id/detailBagasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kemaslah barang bawaan Anda! Setiap penumpang hanya diperbolehkan membawa bagasi 20 kg"
                            android:textColor="@color/orange"
                            android:textSize="16sp"
                            android:layout_below="@id/totalBagasi"
                            android:padding="8dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    id="@+id/containerTotalHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:contentPadding="16dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/labelTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:text="Total"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvTotalHarga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 1.000.000"
                            android:textSize="22sp"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"/>
                        <TextView
                            android:id="@+id/tvPenumpangDewasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dewasa"
                            android:textSize="18sp"
                            android:layout_below="@id/tvTotalHarga"/>
                        <TextView
                            android:id="@+id/tvTotalDewasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x2"
                            android:textSize="18sp"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@id/tvPenumpangDewasa"
                            android:layout_below="@id/tvTotalHarga"/>
                        <TextView
                            android:id="@+id/tvTotalHargaDewasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 800.000"
                            android:textSize="18sp"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/tvTotalHarga"/>
                        <TextView
                            android:id="@+id/tvPenumpangAnak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anak"
                            android:textSize="18sp"
                            android:layout_below="@id/tvPenumpangDewasa"/>
                        <TextView
                            android:id="@+id/tvTotalAnak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x2"
                            android:textSize="18sp"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@id/tvPenumpangAnak"
                            android:layout_below="@id/tvPenumpangDewasa"/>
                        <TextView
                            android:id="@+id/tvTotalHargaAnak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 800.000"
                            android:textSize="18sp"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/tvTotalHargaDewasa"/>
                        <TextView
                            android:id="@+id/tvBagasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bagasi"
                            android:textColor="@color/MC_Green"
                            android:textSize="18sp"
                            android:layout_below="@id/tvPenumpangAnak"/>
                        <TextView
                            android:id="@+id/tvTotalHargaBagasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 800.000"
                            android:textColor="@color/MC_Green"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/tvTotalHargaAnak"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <Button
                    android:id="@+id/btnBayar"
                    style="@style/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="Lanjutkan Pembayaran"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>