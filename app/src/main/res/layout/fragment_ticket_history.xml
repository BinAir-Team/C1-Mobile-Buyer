<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.TicketHistoryFragment"
    tools:ignore="contentDescription,smallSp">

    <RelativeLayout
        android:layout_marginHorizontal="23dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/containerLogo"
            android:layout_marginTop="17.76dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="112.65dp"
                android:layout_height="29dp"
                android:src="@drawable/logo_blue"/>
            <ImageButton
                android:layout_width="24.02dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_notification"
                android:background="@color/transparent"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/containerFilter"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/containerLogo">
            <TextView
                android:id="@+id/filter"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter"
                android:fontFamily="@font/poppins_regular"
                android:textSize="10sp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/history_filterbackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waktu"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"
                    android:id="@+id/timefilter"
                    android:textColor="@color/SB_Base"/>
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="4.7dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/tickethistory_dropdownarrow"/>
            </LinearLayout>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recViewHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/containerFilter"
            tools:listitem="@layout/item_history"/>

        <TextView
            android:id="@+id/tvNotLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/silahkan_login"
            android:textAlignment="center"
            android:textSize="16sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <include
        android:id="@+id/shimmerHistory"
        layout="@layout/shimmer_history"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"/>
</FrameLayout>