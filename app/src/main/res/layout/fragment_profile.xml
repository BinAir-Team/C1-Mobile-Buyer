<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BBC_DrakerWhite"
    tools:context=".ui.fragment.ProfileFragment"
    tools:ignore="contentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="?attr/actionBarSize"
                    android:elevation="12dp"
                    app:menu="@menu/change_pass">
                    <ImageView
                        android:layout_width="112.65dp"
                        android:layout_height="29dp"
                        android:src="@drawable/logo_blue"
                        android:layout_marginTop="17.76dp"
                        android:layout_marginStart="23dp"/>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <RelativeLayout
                android:id="@+id/CTAProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="23dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userprofile"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@id/userprofile"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/profile_userlabelbackground"
                        android:paddingHorizontal="9dp"
                        android:paddingVertical="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Member Silver"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />

                        <ImageView
                            android:layout_width="5.52dp"
                            android:layout_height="7dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/rightarrow" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_cardbackground"
                    android:orientation="vertical"
                    android:paddingHorizontal="22dp"
                    android:paddingVertical="16.42dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/riwayat_pemesanan"
                        android:textSize="18sp" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/profile_cardofcardbackground"

                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="17.55dp"
                                    android:layout_height="13.49dp"
                                    android:src="@drawable/profile_unpaidpayment" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/belum_dibayar"
                                    android:textSize="10sp"
                                    tools:ignore="SmallSp" />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="9dp"
                                    android:layout_marginStart="24dp"
                                    android:layout_marginTop="4dp"
                                    android:src="@drawable/profileblackarrow" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/profile_cardofcardbackground"

                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="17.55dp"
                                    android:layout_height="13.49dp"
                                    android:src="@drawable/profile_unpaidpayment" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="Waiting Trip"
                                    android:textSize="10.79sp" />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="9dp"
                                    android:layout_marginStart="24dp"
                                    android:layout_marginTop="4dp"
                                    android:src="@drawable/profileblackarrow" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/profile_cardofcardbackground"

                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="17.55dp"
                                    android:layout_height="13.49dp"
                                    android:src="@drawable/profile_unpaidpayment" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="Rate Trip"
                                    android:textSize="10sp"
                                    tools:ignore="SmallSp" />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="9dp"
                                    android:layout_marginStart="24dp"
                                    android:layout_marginTop="4dp"
                                    android:src="@drawable/profileblackarrow" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/profile_cardofcardbackground"

                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="17.55dp"
                                    android:layout_height="13.49dp"
                                    android:src="@drawable/profile_unpaidpayment" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="Waiting Trip"
                                    android:textSize="10sp"
                                    tools:ignore="SmallSp" />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="9dp"
                                    android:layout_marginStart="24dp"
                                    android:layout_marginTop="4dp"
                                    android:src="@drawable/profileblackarrow" />

                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/profile_cardbackground"
                    android:orientation="vertical"
                    android:paddingHorizontal="22dp"
                    android:paddingVertical="16.42dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/wishlist"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvWishlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvAlertKosong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tidak_ada_wishlist"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:visibility="gone" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnLogout"
                    style="@style/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/log_out"
                    android:textAlignment="center"
                    android:textColor="@color/MBC_base"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/containerShimmerProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:elevation="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/shimmerImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:backgroundTint="@color/content_grey"
                app:cardCornerRadius="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/shimmerName"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@id/shimmerImage"
                android:backgroundTint="@color/content_grey"
                app:cardCornerRadius="8dp" />

        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</FrameLayout>