<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    <variable
        name="promo"
        type="binar.finalproject.binair.buyer.data.response.DataPromo" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.DetailPromoFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/white"
            android:elevation="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:src="@drawable/ic_back"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTitlePage"
                android:scaleType="fitStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:layout_marginStart="24dp"
                android:text="@string/promo_detail"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPromo"
                    android:src="@drawable/asset_promo"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="185dp" />

                <TextView
                    android:layout_marginTop="25dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/inter_medium"
                    android:text='@{promo.title,default = @string/promo_title}'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/labelPromo"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="159dp"
                    android:layout_below="@+id/cvDeatilPromoContainer">

                    <TextView
                        android:id="@+id/tvBooking"
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                        android:drawablePadding="10dp"
                        android:text="Booking can be made through Airpaz website or mobile app" />

                    <TextView
                        android:layout_width="358dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvBooking"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="18dp"
                        android:drawableLeft="@drawable/ic_schedule"
                        android:drawablePadding="10dp"
                        android:text="Promo Period 1 December 2022 - 31 Desember 2022" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/detaildiskon"
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:layout_below="@+id/detailtanggal"
                    android:layout_marginTop="10dp"
                    android:background="@color/content_grey">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvdiskon"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Minimum Transaction Rp 1.500.000" />

                <TextView
                    android:id="@+id/tvdiskon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_marginTop="32dp"
                    android:text="DISCOUNT RP 80.000" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/kodetransaksi"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mintransaksi"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:contentPadding="16dp"
                        android:backgroundTint="@color/BBC_LightGrey">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/labelcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="voucher promo code"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/labelcode"
                                android:gravity="center"
                                android:text="@{promo.promoCode}" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/SdanK"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="10sp" />

                <TextView
                    android:paddingBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text='@{promo.terms, default = @string/syarat_dan_ketentuan}' />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>