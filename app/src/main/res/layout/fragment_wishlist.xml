<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.WishlistFragment"
    tools:ignore="contentDescription,smallSp">

    <LinearLayout
        android:layout_marginHorizontal="23dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/containerLogo"
            android:layout_marginTop="17.76dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="112.65dp"
                android:layout_height="29dp"
                android:src="@drawable/logo_blue"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RvWishlist"/>
            <TextView
                android:id="@+id/tvAlertKosong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/silahkan_login"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>