<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:contentPadding="8dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="23dp"
        android:paddingVertical="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/logoMaskapai"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="@color/content_grey"
                app:cardCornerRadius="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/tvDate"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/logoMaskapai"
                android:backgroundTint="@color/content_grey"
                android:fontFamily="@font/inter_medium"
                app:cardCornerRadius="8dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/tvStatusPayment"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/content_grey"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                app:cardCornerRadius="8dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bottom_border"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:backgroundTint="@color/content_grey"
                android:fontFamily="@font/inter_medium"
                app:cardCornerRadius="8dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvDepartureTime"
                    android:layout_width="45dp"
                    android:layout_height="16dp"
                    android:backgroundTint="@color/content_grey"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvDepartureCity"
                    android:layout_width="80dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/content_grey"
                    app:cardCornerRadius="8dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/content_grey"
                app:cardCornerRadius="12dp" />

            <LinearLayout
                android:layout_width="91.5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvArrivalTime"
                    android:layout_width="45dp"
                    android:layout_height="16dp"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/content_grey"
                    app:cardCornerRadius="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/tvArrivalCity"
                    android:layout_width="80dp"
                    android:layout_height="12dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/content_grey"
                    app:cardCornerRadius="8dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>