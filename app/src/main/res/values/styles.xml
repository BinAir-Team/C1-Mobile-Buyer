<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="backgroundTint">@color/main_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
    </style>
    <style name="button_circle">
        <item name="backgroundTint">@color/main_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
    </style>
    <style name="PopInComponent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="colorAccent">@color/main_blue</item>
    </style>
    <style name="outlined_button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/white</item>
    </style>
</resources>